<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="status_plugin_lux_meter"
        android:persistent="true"
        android:summary="Detects amount of light."
        android:title="Active" />

    <EditTextPreference
        android:defaultValue="5"
        android:key="frequency_plugin_lux_meter"
        android:persistent="true"
        android:summary="5 minutes"
        android:title="How frequently to calculate average light (in minutes)"
        android:inputType="numberDecimal" />

    <EditTextPreference
        android:defaultValue="1"
        android:key="time_window_plugin_lux_meter"
        android:persistent="true"
        android:summary="1 minute"
        android:title="Time window for frequency (in minutes)"
        android:inputType="numberDecimal" />

    <EditTextPreference
        android:defaultValue="100"
        android:key="threshold_plugin_lux_meter"
        android:persistent="true"
        android:summary="100 lux"
        android:title="Enaught light to charge phone (in lux)"
        android:inputType="numberDecimal" />

</PreferenceScreen>